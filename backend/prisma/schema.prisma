generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Peserta {
  id           Int      @id @default(autoincrement())
  nama         String   
  komting      String   @map("komting")
  email        String
  nowa         String
  kelas        String
  status       PesertaStatus  @default(PENDING)
  createAt     DateTime @default(now())
  updateAt     DateTime?
  cabangId     Int      @map("cabang_id")
  cabang       Cabang   @relation(fields: [cabangId], references: [id])

  @@map("peserta")
}

model Cabang {
  id          Int       @id @default(autoincrement())
  nama        String    @default("")
  participant Int
  harga       Float
  peserta     Peserta[]

  @@map("cabang")
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String
  password  String
  createdAt DateTime @default(now())

  @@map("admin")
}

enum PesertaStatus {
  APPROVED
  PENDING
  REJECT
}
