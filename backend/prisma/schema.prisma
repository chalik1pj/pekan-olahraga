generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Peserta {
  id           Int      @id @default(autoincrement())
  nama         String
  email        String
  nowa         String
  kelasId      Int      @map("class_id")
  status       PesertaStatus  @default(PENDING)
  createAt     DateTime @default(now())
  updateAt     DateTime?
  cabangId     Int      @map("cabang_id")
  cabang       Cabang   @relation(fields: [cabangId], references: [id])
  kelas        Kelas    @relation(fields: [kelasId], references: [id])

  @@map("peserta")
}

model Cabang {
  id          Int       @id @default(autoincrement())
  nama        String    @default("")
  participant Int
  harga       Float
  peserta     Peserta[]

  @@map("cabang")
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String
  password  String
  createdAt DateTime @default(now())

  @@map("admin")
}

model Kelas {
  id        Int     @id @default(autoincrement())
  nama      String  @unique
  komting   String
  peserta   Peserta[]

  @@map("kelas")
}

enum PesertaStatus {
  APPROVED
  PENDING
  REJECT
}
